{
  "buildCommand": "pnpm install && pnpm --filter web run build && pnpm --filter api run build",
  "installCommand": "pnpm install",
  "outputDirectory": "apps/web/.next",
  "framework": "nextjs",
  "functions": {
    "api/index.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/email-intake/poll",
      "schedule": "* * * * *"
    }
  ]
}
